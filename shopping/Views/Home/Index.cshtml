<div class="jumbotron">
    <h1><span class="glyphicon glyphicon-shopping-cart"></span>Alimama Shopping</h1>
    <p class="lead">Welcome to our new Online Shopping Platform</p>
    <p><a href="http://asp.net" class="btn btn-primary btn-lg">Sign Up &raquo;</a></p>
</div>
<div class="row">
    @for (int i = 0; i < ViewBag.itemNum; i++)
    {
        <div class="col-md-4">
            <h2>@ViewBag.title[i]</h2>
            <p>
                @ViewBag.desc[i]
            </p>
            <p><a class="btn btn-default" href="item/@ViewBag.link[i]"><span class="glyphicon glyphicon-shopping-cart"></span>Cart &raquo;</a></p>
        </div>
    }
</div>
